<body class="container-fluid">
    <p class="row">
        <h2 class="text-center">YouTube Download Tool</h1>
        <h3 class="text-center">Download YouTube Videos as MP3 File for Free</h2>
    </p>
    <div class="col-xs-12 col-md-10 offset-md-1 jumbotron">
        <form class="form-group col-xs-12 col-sm-12 row" method = "get" action="/YoutubeDownload/DownloadAsMp3/">

            <label class="sr-only" for="inlineFormInputGroupUsername2">Paste your URL here</label>
            <div class="input-group">
                <div class="input-group-prepend">
                    <div class="input-group-text"> Single URL</div>
                </div>
                <input type="text" class="form-control" id="inlineFormInputGroupUsername2" placeholder="Put your YouTube URL here" name ="url">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>
        <form class="row col-xs-12 col-sm-12" method="post" action="/YoutubeDownload/createTaskForm">
            <lable class="form-control">Download and Zip from Multiple URLs </lable>
            <textarea name="urls" class="form-control" rows="20"></textarea> 
            <input type="submit" class="form-control btn btn-primary" text="Start Download Task"/>
        </form>
    </div>


</body>
